<resources>

    <!-- Peter: Important to use "MaterialComponents" theme when using the latest material components!
         https://github.com/material-components/material-components-android/issues/298
     -->
    <style name="CMC.AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PriceValueTextLarge">
        <item name="android:textColor">@color/text_price_color</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="PriceValueTextSmall">
        <item name="android:textColor">@color/text_price_color</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="EditTextLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neon_blue</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Button">
        <item name="backgroundTint">@color/button_blue</item>
        <item name="android:background">@drawable/button_drawable</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
